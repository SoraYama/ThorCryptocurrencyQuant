# ThorCryptoCurrency Strategy Library 环境变量配置
# 复制此文件为 .env 并填入实际值

# 交易所配置
EXCHANGE=binance
API_KEY=your_binance_api_key_here
API_SECRET=your_binance_secret_here

# 交易配置
ORDER_SYMBOL=ETH/USDT
ORDER_TYPE=limit

# 网格策略参数
NUM_BUY=3
NUM_SELL=1
ORDER_SPREAD=0.5
ORDER_PROFIT=0.5
ORDER_AMOUNT_BUY=30
ORDER_AMOUNT_SELL=30

# 数据库配置
MONGO_URI=mongodb://mongo:27017/binance
MONGO_HOST=mongo
MONGO_PORT=27017
MONGO_DB=binance

# WebSocket 配置
WS_HOST=wss://stream.binance.com:9443/ws/ethusdt@ticker
WS_PING_INTERVAL=1

# 系统配置
TZ=Asia/Shanghai
PYTHONUNBUFFERED=1
